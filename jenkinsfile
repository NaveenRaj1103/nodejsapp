pipeline {
    agent any

    stages {
        stage('Clone Repository') {
            steps {
                echo 'Cloning the GitHub repository...'
                git branch: 'main', url: 'https://github.com/NaveenRaj1103/nodejsapp.git'
            }
        }

        stage('Build Docker Image') {
            steps {
                echo 'Building Docker image using Dockerfile...'
                sh 'docker build -t my-app-image .'
            }
        }
            stage('Running Docker Image') {
            steps {
                echo 'Running docker container using docker image...'
                sh 'docker run -d -p 3000:3000 my-app-image'
            }
        }
    }
    }


    post {
        success {
            echo 'Docker image successfully built!'
        }
        failure {
            echo 'Pipeline failed during build. Please check the logs for more details.'
        }
    }
}


